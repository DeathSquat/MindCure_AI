<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_green"
        android:elevation="4dp"
        app:contentInsetStartWithNavigation="0dp"
        app:navigationIcon="@drawable/ic_arrow_back">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wellness Center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/optionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Let's Chat Option -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/chatCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Let's Chat"
                        android:textSize="18sp"
                        android:textColor="@color/primary_green"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start a conversation with our AI to detect your emotions and provide personalized support"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Breathing Exercise Option -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/breathingCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Breathing Exercise"
                        android:textSize="18sp"
                        android:textColor="@color/primary_green"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learn and practice breathing techniques for stress relief and relaxation"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Mindfulness Activity Option -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mindfulnessCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mindfulness Activity"
                        android:textSize="18sp"
                        android:textColor="@color/primary_green"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Engage in mindfulness exercises to improve focus and reduce anxiety"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Learning Activity Option -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/learningCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Learning Activity"
                        android:textSize="18sp"
                        android:textColor="@color/primary_green"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Access educational content about mental health and well-being"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Goal Setting Option -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/goalCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Goal Setting"
                        android:textSize="18sp"
                        android:textColor="@color/primary_green"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set and track your personal development and wellness goals"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tips Option -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tipsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tips"
                        android:textSize="18sp"
                        android:textColor="@color/primary_green"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Access helpful tips and strategies for maintaining mental well-being"
                        android:textSize="14sp"
                        android:textColor="@color/text_primary"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout> 